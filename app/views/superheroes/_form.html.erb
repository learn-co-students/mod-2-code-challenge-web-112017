<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @superhero do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :"Super name" %><br>
  <%= f.text_field :super_name %> <br>
  <%= f.label :"Superpower" %> <br>
  <%= f.collection_select :superpower_id, @superpowers, :id, :name %> <br>
  <%= f.submit %>

<% end %>
