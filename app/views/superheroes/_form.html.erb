<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @superhero do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :super_name %><br>
  <%= f.text_field :super_name %><br>

  <br>
  <%= f.label "Super Power" %><br>
  <%= f.collection_select :superpower_id, @superpowers, :id, :name %><br>

  <br>
  <%= f.submit %>
<% end %>
