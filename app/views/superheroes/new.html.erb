<h1>Create Super Hero:</h1>

<%= form_for @superhero do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :super_name %><br>
  <%= f.text_field :super_name %><br>

  <%= f.label :superpower %><br>
  <%= f.collection_select :superpower_id, @superpowers, :id, :name, include_blank: "Please select" %>

  <%= f.submit "Create Superhero"%>
<% end %>
