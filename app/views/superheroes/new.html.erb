<% if flash[:error] %>
  <ul>
  <% flash[:error].each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<h1>Create Super Hero:</h1>

<%=form_for @superhero do |f| %>
<%=f.label :name %>
<%=f.text_field :name %>
<br>
<%=f.label :super_name %>
<%=f.text_field :super_name %>
<br>
<%=f.label :superpower_id, value: "Superpower" %>
<%=f.collection_select :superpower_id, @superpowers, :id, :name, prompt: true %>
<br>
<%=f.submit  %>
<% end %>
