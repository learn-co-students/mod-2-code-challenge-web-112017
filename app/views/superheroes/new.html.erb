<% if flash[:errors] != nil %>
  <% flash[:errors].each do |e| %>
    <li>><%= e %></li>
  <% end %>
<% end %>




<%= form_for @superhero do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :super_name %>:
  <%= f.text_field :super_name %><br />

  <%= f.label "Superpower" %>:
  <%= f.collection_select :superpower_id, @superpowers, :id, :name %>

<!--  collection_select(:post, :author_id, Author.all, :id, :name_with_initial, prompt: true)-->
  <%= f.submit %>
<% end %>
